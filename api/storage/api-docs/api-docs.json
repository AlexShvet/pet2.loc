{
    "openapi": "3.0.0",
    "info": {
        "title": "Api Documentation",
        "description": "REST API for pet projects / REST API для тренировочных проектов",
        "contact": {
            "email": "hermansochi@ya.ru"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://api.localhost/api/v1",
            "description": "API Server"
        }
    ],
    "paths": {
        "/org/users": {
            "get": {
                "tags": [
                    "OrgUsers"
                ],
                "summary": "Get all organization users / Возвращает всех сотрудников",
                "description": "Returns all organization users with pagination / Возвращает список сотрудников в JSON коллекции с метаданными c разбивкой по страницам",
                "operationId": "getAllOrgUser",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "The page number / Номер страницы",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation / Успех",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/OrgUser"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Controller": {
                "title": "Links",
                "description": "Links / Ссылки",
                "properties": {
                    "Links": {
                        "type": "object",
                        "example": {
                            "first": "http://127.0.0.1:8000/api/users?page=1",
                            "last": "http://127.0.0.1:8000/api/users?page=1",
                            "prev": null,
                            "next": null
                        }
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Links"
                }
            },
            "OrgUser": {
                "title": "OrgUser",
                "description": "Organization user / Сотрудник организации",
                "properties": {
                    "id": {
                        "description": "Uniq organization user ID / Уникальный ID сотрудника в формате UUID",
                        "type": "uuid",
                        "example": "976b48f0-7fd3-4d03-82ce-395ddeafe5d6"
                    },
                    "name": {
                        "description": "Uniq organization user name / Уникальное имя сотрудника",
                        "type": "string",
                        "maxLength": 255,
                        "example": "Sorokina.F.cb64ffcc-7336-3050-80f6-a6d51abfb053"
                    },
                    "hide": {
                        "description": "If eq true - don't show user / Если true - то не показывать сотрудника",
                        "type": "boolean",
                        "example": true
                    },
                    "thumbnail": {
                        "description": "If eq false - show default user avatar / Если false - то сотрудник без аватара, показать дефолтный",
                        "type": "boolean",
                        "example": false
                    },
                    "first_name": {
                        "description": "User first name / Имя сотрудника",
                        "type": "string",
                        "maxLength": 50,
                        "example": "Иван"
                    },
                    "last_name": {
                        "description": "User last name / Фамилия сотрудника",
                        "type": "string",
                        "maxLength": 50,
                        "example": "Иванов"
                    },
                    "middle_name": {
                        "description": "User middle name / Отчество сотрудника",
                        "type": "string",
                        "maxLength": 50,
                        "example": "Иванович"
                    },
                    "birthday": {
                        "description": "Birthday without year dd.mm / День рождения сотрудника без года dd.mm",
                        "type": "string",
                        "maxLength": 10,
                        "example": "25.01"
                    },
                    "email": {
                        "description": "user email / Электронная почта сотрудника",
                        "type": "email",
                        "maxLength": 10,
                        "example": "my.email@example.ru"
                    },
                    "cn": {
                        "description": "Common name (LDAP attrib) / В общем случае ФИО сотрудника",
                        "type": "string",
                        "maxLength": 255,
                        "example": "Иванов Иван Иванович"
                    },
                    "telephone": {
                        "description": "Internal phone number / Внутренний или добавочный телефонный номер",
                        "type": "string",
                        "maxLength": 20,
                        "example": "7777"
                    },
                    "mobile": {
                        "description": "Cellular phone number. 10 digits. / Мобильный телефонный номер. 10 цифр без префиксов 8 или +7",
                        "type": "string",
                        "maxLength": 20,
                        "example": "9899001010"
                    },
                    "title": {
                        "description": "Position / Должность",
                        "type": "string",
                        "maxLength": 255,
                        "example": "Переворачиватель пингвинов"
                    },
                    "department": {
                        "description": "Department / Отдел",
                        "type": "string",
                        "maxLength": 255,
                        "example": "Бухгалтерия"
                    },
                    "company": {
                        "description": "Company / Организация",
                        "type": "string",
                        "maxLength": 255,
                        "example": "ООО Рога и копыта"
                    },
                    "created_at": {
                        "description": "Initial creation timestamp / Таймштамп создания записи",
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-10-04T13:10:25.000000Z"
                    },
                    "updated_at": {
                        "description": "ULast update timestamp / Таймштамп изменения записи",
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-10-04T13:10:25.000000Z"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "OrgUser"
                }
            }
        },
        "responses": {
            "404": {
                "description": "User not found / Сотрудник не найден",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/OrgUser"
                                    }
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "OrgUser",
            "description": "API Endpoints of organization users / Эндпоинты для получения информации о сотрудниках"
        }
    ]
}